<%- include('partials/homeHeader') -%>

<body id="home-body">
  <section class="mainContainer">
    <section class="menu-container">
      <i class="fa-solid fa-bars"></i>
      <nav>
        <li>
          <a href="/home" id="prev">PREV<span id="ai">AI</span>L</a>
        </li>
        <li><a href="/resources">Resources</a></li>
        <li><a href="/faq">FAQ</a></li>
        <li><a href="/about">About</a></li>
        <li id="feedback"><a onclick="expandFeedback()" href="#">Feedback</a></li>
        <li id="feedback-expanded">
          <form action="https://formspree.io/f/mvoebaaq" method="POST">
            <input type="text" name="name" placeholder="Your Name" />
            <input type="email" name="_replyto" placeholder="Your Email" />
            <textarea name="message" placeholder="Your Message"></textarea>
            <button type="submit">Submit</button>
            <button type="button" onclick="collapseFeedback()" id="collapse">Collapse</button>
          </form>
        </li>
        <li>
          <a id="account" href="#">Account</a>
        </li>
      </nav>
    </section>
    <div class="main-body chat-side">
      <div class="output container">
        <ul class="row list-unstyled" id="chat-container">
          <li id="botLI">
            <p class="chat bot"><strong>Grace: </strong>Hello! How are you?</p>
          </li>
          <% if (chats.length>0) { %> <% for (var i = 1; i < chats.length; i++) { %>
          <li id="userLI">
            <p class="chat user"><strong>User: </strong> <%= chats[i].chat.userPrompt %></p>
          </li>
          <li id="botLI">
            <p class="chat bot"><strong>Grace: </strong> <%= chats[i].chat.botResponse %></p>
          </li>
          <% } %> <% } else { %>
          <li>No chat history available.</li>
          <% } %>
        </ul>
      </div>

      <!-- <p href="" class="typewrite" data-period="2000" data-type="">
        <span class="wrap"></span>
      </p> -->

      <!-- user input area -->
      <form class="user-area" action="" onsubmit="return false">
        <textarea
          data-gramm="false"
          data-gramm_editor="false"
          data-enable-grammarly="false"
          class="input"
          id="autoresizing"
          placeholder="Say something!"></textarea>
        <i id="submit" type="submit" class="fa-solid fa-arrow-up"></i>
      </form>
    </div>
  </section>
</body>
<%- include('partials/homeFooter') -%>
